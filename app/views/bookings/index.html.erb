<% if current_user.nanny %>
  <div class="container">
    <div class="row">
      <div class="col">
        <% if current_user.nanny.bookings.any? %>
      <h1> see your bookings </h1>
        <% @bookings.each do |f| %>
          <div class="card-product">
            <% if f.photo.attached? %>
              <%= cl_image_tag f.photo.key, height: 300, width: 400, crop: :fill %>
            <% else %>
                 <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <% end %>
            <div class="card-product-infos">
              <h2><%= f.user.name %></h2>
              <p><%= f.message %></p>
              <%= f.kids_number %>
              <%= f.start_date.strftime("%m-%e-%y %H:%M") %>
              <%= f.end_date.strftime("%m-%e-%y %H:%M") %>
              <%= f.status %>
              <%= link_to("accept", accept_booking_path(f), method: :patch) %>
              <%= link_to("reject", reject_booking_path(f), method: :patch) %>
            </div>
          </div>

         <br>
        <% end %>
        <% else %>
        <p> you have no bookings yet ... </p>

        <% end %>

      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col">
      <h1> see your bookings </h1>
        <% @request_bookings.each do |f| %>
          <div class="card-product">
            <% if f.photo.attached? %>
              <%= cl_image_tag f.photo.key, height: 300, width: 400, crop: :fill %>
            <% else %>
                 <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <% end %>
            <div class="card-product-infos">
              <h2><%= f.nanny.user.name %></h2>
              <p><%= f.nanny.description %></p>
              <%= f.start_date.strftime("%m-%e-%y %H:%M") %>
              <%= f.end_date.strftime("%m-%e-%y %H:%M") %>
              <%= f.status %>
            </div>
          </div>

         <br>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
