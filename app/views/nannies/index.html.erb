<div class="container">
  <div class="row">
    <% @nannies.each do |nanny| %>
      <div class="col-3">
        <div class="card">
          <%= link_to nanny_path(nanny) do %>
          <% if nanny.photo.attached? %>
          <%= cl_image_tag nanny.photo.key, height: 200, crop: :fill, class: "card-img-top" %>
          <% else %>
          <%= image_tag "https://images.unsplash.com/photo-1537815749002-de6a533c64db?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1145&q=80", height: 200, crop: :fill, class: "card-img-top"%>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= nanny.description %></h5>
            <div class="card">
              <p><%= nanny.price_per_hour %> â‚¬ per hour</p>
              <p><%= nanny.age %> years old</p>
            </div>
          </div>
          <% end %>
          <%= link_to "See More", nanny_path(nanny), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
